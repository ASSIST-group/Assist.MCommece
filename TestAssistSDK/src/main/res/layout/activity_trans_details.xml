<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment inforamtion"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            >
        </TextView>

    </LinearLayout>

    <!-- -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">             
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order date:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvtransDetailsOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
	</LinearLayout>        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">     
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order No:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvtransDetailsOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order amount:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvtransDetailsOrderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order comment:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvtransDetailsOrderComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order status:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvtransDetailsOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order extra info:"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvtransDetailsOrderExtraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>    


    <!-- -->

    <Button
        android:id="@+id/btnUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update state"
		android:layout_marginTop="16dp"/>
    
</LinearLayout>
</ScrollView>